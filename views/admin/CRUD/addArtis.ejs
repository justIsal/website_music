<%- include('../../layout/header_admin')%>
    <div class="my-3 w-full bg-slate-100 box p-4 flex top-10 right-0">
        <div class="m-auto w-full">
            <form action="/createArtis" class="px-4 w-full" method="post">
                <p>id artis</p>
                <input type="text" class="text-black w-full h-10 bg-slate-200 rounded-md pl-2" name="id_artis">
                <p>nama artis</p>
                <input type="text" class="text-black w-full h-10 bg-slate-200 rounded-md pl-2" name="username">
                <p>id genre</p>
                <!-- <input type="" class="text-black w-full h-10 bg-slate-200 rounded-md pl-2" name="genre"> -->
                <select class="text-black w-full h-10 bg-slate-200 rounded-md pl-2" name="genre" value="">
                    <optgroup label="Pilih Id genre">
                        <% genre.forEach(item=> {%>
                            <option value="<%=item.id_genre%>"><%=item.id_genre%></option>
                        <% })%>
                    </optgroup>
                </select>
                <p>id album</p>
                <!-- <input type="password" class="text-black w-full h-10 bg-slate-200 rounded-md pl-2" name="album"> -->
                <select class="text-black w-full h-10 bg-slate-200 rounded-md pl-2" name="album">
                    <optgroup label="Pilih Id album">
                        <% album.forEach(item=> {%>
                            <option value="<%=item.id_album%>"><%=item.id_album%></option>
                        <% })%>
                    </optgroup>
                </select>
                <input type="submit"
                    class="w-full h-10 text-white bg-blue-400 rounded-md pl-2 cursor-pointer mt-3 hover:bg-blue-500"
                    name="submit" value="Tambah">
            </form>
        </div>
    </div>
    <%- include('../../layout/footer_admin')%>